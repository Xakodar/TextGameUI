<Window x:Class="WpfApp.Lobby"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="Lobby" Height="350" Width="525">
    <Grid>
        <Button Content="Начать игру" HorizontalAlignment="Center" Height="46" VerticalAlignment="Top" Width="200" Click="Button_Click_StartGame" Margin="0,136,0,0"/>
        <Button Content="Загрузить сохранение" HorizontalAlignment="Center" Height="45" Margin="0,187,0,0" VerticalAlignment="Top" Width="200" Click="Button_Click_StartGameSave"/>
        <TextBlock x:Name="textBoxError" Visibility="Hidden"  HorizontalAlignment="Left" Margin="184,237,0,0" TextWrapping="Wrap" Text="Нет сохраненных игр" VerticalAlignment="Top" Width="252" Height="35" FontSize="16"/>
    </Grid>
</Window>
